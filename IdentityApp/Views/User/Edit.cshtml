@model EditViewModel
<h2>Kullanıcı Güncele</h2>
<hr>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input name="Id" value="@Model.Id" type="hidden" >
  <div class="mb-3">
    <label asp-for="UserName"></label>
    <input asp-for="UserName" class="form-control"></input>
  </div>

  <div class="mb-3">
    <label asp-for="FulName"></label>
    <input asp-for="FulName" class="form-control"></input>
  </div>

  <div class="mb-3">
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control"></input>
  </div>

  <div class="mb-3">
    <label asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" class="form-control"></input>
  </div>

  <div class="card card-body">
    <div class="card-header">
      Parolayı Güncele
    </div>
    <div class="mb-3">
      <label asp-for="Password"></label>
      <input asp-for="Password" class="form-control"></input>
    </div>
  
    <div class="mb-3">
      <label asp-for="ConfirmPassword"></label>
      <input asp-for="ConfirmPassword" class="form-control"></input>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      Roller
    </div>
    <div class="card-body">
      @foreach(var role in ViewBag.Roles)
      {
        <div class="form-check">
           <input type="checkbox"
            class="form-check-input" 
            name="SelectedRoles"
            value="@role"
            id="@role"
            @if(Model.SelectedRoles != null)
            {
              @(Model.SelectedRoles.Any(i=> i==role) ? "checked": "")
            }
             >
           <label for="@role" class="form-check-label">@role</label>
        </div>
      }
    </div>
  </div>
<hr>
  <button class="btn btn-primary">Kaydet</button>
</form>
