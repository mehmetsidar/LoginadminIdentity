@model IEnumerable<AppUser>

    <a  class="btn btn-success" asp-controller="Account" asp-action="Create" >Kullanıcı Ekle</a>
    <hr>
<table class="table table-sm table-bordered">
<thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Fullname</th>
        <th>Email</th>
        <th>Phone</th>
   
    </tr>
</thead>
<tbody>
    @if(Model.Count()==0)
    {
        <tr><td colspan="4" class="text-center">User Yok</td></tr>
    }

    @foreach(var user in Model){
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.FulName</td> 
            <td>@user.Email</td>
            <td>@user.PhoneNumber</td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm ">Güncele</a>
                <form style="display: inline-block;" asp-action="Delete" method="post" onsubmit="return confirm('Eminmisin') ">
                    <input type="hidden" value="@user.Id" name="id">
                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                </form>
            </td>
        </tr>
    }
</tbody>
</table> 