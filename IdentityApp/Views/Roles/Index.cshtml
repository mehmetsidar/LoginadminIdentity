@model IEnumerable<AppRole>
    <a  class="btn btn-success" asp-action="Create" >Kullanıcı Rol Ekle</a>
    <hr>

    <table class="table table-sm table-bordered">
        <tr>
            <th>Id</th>
            <th>Role Adı</th>
            <th>Kullanıcılar</th>
        </tr>


        @if(Model.Count()==0)
        {
            <tr><td colspan="4" class="text-center">Role Yok</td></tr>
        }

        @foreach(var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td asp-role-users="@role.Id"></td>
                <td>
                    <form method="post">
                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary btn-sm">Güncele</a>
                        <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </table>