@model AppRole

<h2>Rolü Güncele</h2>
<hr>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input name="Id" value="@Model.Id" type="hidden" >
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"></input>
    </div>
<hr>
    <button class="btn btn-primary">Kaydet</button>
</form>

<hr>
<table class="table table-sm table-bordered">
<thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Fullname</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Actions</th>
    </tr>
</thead>
<tbody>
  @if(ViewBag.Users != null)
  {
    if(ViewBag.Users.Count == 0)
    {
        <tr><td colspan="6" class="text-center">User Yok</td></tr>
    }
    else
    {
        @foreach(var user in ViewBag.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.FulName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Güncele</a>
                </td>
            </tr>
        }
    }
  }
  else
  {
      <tr><td colspan="6" class="text-center">User Yok</td></tr>
  }
</tbody>
</table>
